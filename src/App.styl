@import 'normalize.css'

// variables
:root {
  --primary:#00b0ff;
  --secondary: #ff3d00;
  --tertiary: #64dd17
  --space-small: 20px
  --edge-space: 3%;
}

html
  font-family 'Montserrat', sans-serif
  color #fff

body
  background-color var(--primary)
  
a
  text-decoration none
  color var(--secondary)
  &:visited, &:active, &:focus
    text-decoration none
  &:hover
    color var(--primary)

h2
  color var(--primary)

.search-food, .add-amount, .results-list
  display flex
  flex-direction column
  text-align center
  align-items center

input, label
  display block
  background none
  border none

.default-input
  height 60px
  margin-top var(--space-small)
  display flex
  flex-direction column
  justify-content space-between
  color var(--secondary)
  &__input
    width 200px
    border-bottom 3px solid var(--secondary)
    transition all 0.2s ease
    &:focus
      width 250px
      border-bottom 3px solid var(--primary)

.results-list__item, .tab-single, .default-button
  cursor pointer
  border 0

.center
  text-align center

.primary
  display flex
  align-items center
  justify-content center
  color #fff
  background-color: var(--secondary)
  height 50px
  width 200px
  border-radius 30px
  font-weight 700
  margin var(--space-small)
  transition background-color 0.2s ease
  position relative
  &:hover
    background-color: var(--tertiary)
    color #000

.round
  width 40px
  height 40px
  background-color #D8D8D8
  border-radius 50%
  margin 0 5px
  transition background-color 0.2s ease
  &:hover
    background-color: var(--secondary)
    color #000

.error-empty-field
  font-weight 700
  color red
  margin 10px

